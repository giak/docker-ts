{
  "name": "water-system-project",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "docker:build": "docker-compose -f docker/docker-compose.yml build",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f docker/docker-compose.yml logs -f",
    "docker:sh": "docker-compose -f docker/docker-compose.yml exec app sh",
    "docker:dev": "docker-compose -f docker/docker-compose.yml up -d --build && docker-compose -f docker/docker-compose.yml exec app pnpm dev",
    "lint": "biome lint .",
    "format": "biome format .",
    "check": "biome check .",
    "ci": "biome ci .",
    "test:e2e": "cypress run",
    "release": "standard-version",
    "prepare": "husky",
    "test:hooks": "husky lint-staged",
    "format:check": "biome check .",
    "format:write": "biome check --apply .",
    "generate:component": "node scripts/generateComponent.js",
    "test:unit": "vitest",
    "test:e2e:open": "cypress open",
    "commit": "cz",
    "smart-commit": "node scripts/smart-commit.js"
  },
  "dependencies": {
    "@datastructures-js/priority-queue": "^6.3.1",
    "@primevue/themes": "^4.1.0",
    "autoprefixer": "^10.4.20",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "lodash-es": "^4.17.21",
    "node-fetch": "^3.3.2",
    "pinia": "^2.2.4",
    "pinia-plugin-persistedstate": "^4.1.1",
    "postcss": "^8.4.47",
    "primeicons": "^7.0.0",
    "primevue": "^4.1.0",
    "rxjs": "^7.8.1",
    "tailwindcss": "^3.4.13",
    "uuid": "^10.0.0",
    "vue": "^3.5.12",
    "vue-router": "^4.4.5"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.3",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/cz-commitlint": "^19.5.0",
    "@pinia/testing": "^0.1.6",
    "@tsconfig/node20": "^20.1.4",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.7.5",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vitest/ui": "^2.1.2",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.20",
    "eslint-plugin-vue": "^9.29.0",
    "fast-check": "^3.22.0",
    "husky": "^9.1.6",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.47",
    "sass": "^1.79.5",
    "sass-embedded": "^1.79.5",
    "standard-version": "^9.5.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "vite-plugin-compression2": "^1.3.0",
    "vite-plugin-vue-devtools": "^7.4.6",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.2",
    "vue-tsc": "^2.1.6"
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx,vue}": [
      "biome check --apply --organize-imports-enabled=false --no-errors-on-unmatched"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
